<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tna_team.key_kost.DetailPenyewa">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headerSection">

        <ImageView
            android:id="@+id/picPenyewa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txtNamaPenyewa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/picPenyewa"
            android:text="Nama Penyewa Kos"
            android:textAlignment="center"
            android:textSize="30sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contentSection"
        android:layout_below="@+id/headerSection"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/actionSection">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="wadawdiadwkdo\nwkaowkdoakwadawdiadwkdo\nwkaowkdoakwadawdiadwkdo\nwkaowkdoakwadawdiadwkdo\nwkaowkdoakwadawdiadwkdo\nwkaowkdoakwadawdiadwkdo\nwkaowkdoakwadawdiadwkdo\nwkaowkdoak"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/actionSection"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnUbah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah Data"
            android:layout_marginStart="51dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapus Data"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnUbah"
            android:layout_marginStart="50dp" />
    </RelativeLayout>
</RelativeLayout>
