<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tna_team.key_kost.TambahAtauUbahPenyewaKos">

    <RelativeLayout
        android:id="@+id/fieldInputSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentTop="true">

        <EditText
            android:id="@+id/edNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:hint="Nama"
            android:inputType="textPersonName"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edNama"
            android:layout_below="@+id/edNama"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edNomorHandphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="No Handphone"
            android:inputType="phone"
            android:layout_below="@+id/edEmail"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/edNoKamar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edNomorHandphone"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="Nomor Kamar"
            android:inputType="textPersonName"/>


        <EditText
            android:id="@+id/edRfid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:hint="RFID"
            android:inputType="text"
            android:layout_below="@+id/edNoKamar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

        <EditText
            android:id="@+id/edPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edRfid"
            android:layout_marginTop="19dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Password" />

        <EditText
            android:id="@+id/edAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Alamat Asal"
            android:inputType="textMultiLine"
            android:layout_below="@+id/edPassword"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/accent"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnOK"
            android:layout_width="185dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/white_button"
            android:elevation="0dp"
            android:text="OK"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnBatal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@drawable/white_button"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnOK"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</RelativeLayout>
